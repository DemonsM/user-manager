<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ink.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.ink.entity.User">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="age" property="age"/>
        <result column="salary" property="salary"/>
        <result column="phone" property="phone"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,
        `name`,
        age,
        salary,
        phone
    </sql>

    <select id="selectAll" resultType="com.ink.entity.User">
        select id, name, age, salary, phone
        from t_user
    </select>

    <insert id="saveUser">
        insert into t_user(id, name, age, salary, phone) VALUE
                (#{id}, #{name}, #{age}, #{salary}, #{phone})
    </insert>

    <!--auto generated by MybatisCodeHelper on 2021-07-16-->
    <delete id="deleteById">
        delete
        from t_user
        where id = #{id}
    </delete>

    <!--auto generated by MybatisCodeHelper on 2021-07-16-->
    <select id="selectOneById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user
        where id = #{id}
    </select>

    <!--auto generated by MybatisCodeHelper on 2021-07-16-->
    <update id="updateById">
        update t_user
        <set>
            <if test="updated.name != null">
                name = #{updated.name},
            </if>
            <if test="updated.age != null">
                age = #{updated.age},
            </if>
            <if test="updated.salary != null">
                salary = #{updated.salary},
            </if>
            <if test="updated.phone != null">
                phone = #{updated.phone},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectUserByNameOrPhone" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user
        <where>
            <if test="name != null and name != ''">
                name like concat('%', #{name,jdbcType=VARCHAR}, '%')
            </if>
            <if test="phone != null">
                or phone like concat('%', #{phone,jdbcType=BIGINT}, '%')
            </if>
        </where>
    </select>
</mapper>
